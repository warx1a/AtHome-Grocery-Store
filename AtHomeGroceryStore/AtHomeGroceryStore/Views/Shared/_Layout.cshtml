<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - AtHomeGroceryStore</title>
        @Scripts.Render("~/bundles/jquery")
        @Styles.Render("~/Content/css")
    </head>
    <body>
        <div class="navarea">
            <nav>
                <ul>
                    <li>
                        @Html.ActionLink("Home", "Index", "Store", new { @class = "navbar-item" })
                    </li>
                    <li>
                        @Html.ActionLink("Products", "ProductInfo", "Store", new { @class = "navbar-item" })
                    </li>
                    <li>
                        @Html.ActionLink("Profile", "Profile", "Store", new { @class = "navbar-item" })
                    </li>
                    <li>
                        @Html.ActionLink("FAQ", "FAQ", "Store", new { @class="navbar-item" })
                    </li>
                </ul>
            </nav>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - AtHome Grocery Store</p>
            </footer>
        </div>
    </body>
</html>